<h1>Listing feeds</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag feed_path, :method => 'get' do %>
      <%= select_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.category %></td>
        <td><%= feed.title %></td>
        <td><%= feed.link %></td>
        <td><%= feed.desc %></td>
        <td><%= feed.entrydate %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
